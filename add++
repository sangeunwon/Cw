#include <stdio.h>

int main()
{
char op;
int a, b;

printf("계산기 프로그램 입니다.\n");
printf("계산식을 입력하세요. 예 (45 - 12)\n");
scanf("%d %c %d", &a, &op, &b);

if(op=='+') printf("\n%d", a+b); 
else if(op=='-') printf("\n%d", a-b);
else if(op=='*') printf("\n%d", a*b);
else if(op=='/') printf("\n%d", a/b); 
else printf("\n잘못입력하셨습니다. 다시 입력해주세요 \n");

return 0;
}
